# This config file is for aliases and other config shared across zsh and bash

alias vi="vim"
set -o vi

# User specific aliases and functions
export P4EDITOR=vim
export EDITOR=vim
export VISUAL=vim

alias tmuxt="tmux a -t"
alias tmuxs="tmux new-session -s"
alias tmuxl="tmux list-sessions"

alias clip="nc -U ~/.clipper.sock"

function us102() {
   ssh -q joshpfosi@us102 "rm .clipper.sock";
   rm .ssh/joshpfosi@us102:8378;
   ssh -q us102
}

function addmusic {
    # Get the best audio, convert it to MP3, and save it to the current
    # directory.
    youtube-dl --default-search=ytsearch: \
               --restrict-filenames \
               --format=bestaudio \
               --extract-audio \
               --audio-format=mp3 \
               --audio-quality=1 "$*"
    mv *.mp3 ~/Google\ Drive/Pfosi\'s\ Music\ Folder/
}

alias addmusic="addmusic"

if [ -e ~/.bashrc.arista ]
then
   source ~/.bashrc.arista
fi
